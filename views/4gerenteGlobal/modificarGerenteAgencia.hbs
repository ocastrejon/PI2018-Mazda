{{> header }}

<body style="width: 98.9vw; height:100vh">
    
    <section class="menuBar">
        <h5 class="card-header" style="    margin: 3px; margin-bottom: 20px; font-size: 31px; color:white;">
            <img src="../../../assets/images/logoBueno.jpg" style="width: 45px; margin-right: 10px;">Modificar Gerente de Agencia
            <div class="btn-group" style="float: right;">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menú
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a href="/inicioGG" class="dropdown-item">Perfil</a>
                    <a href="/logout" class="dropdown-item">Cerrar Sesión</a>
                </div>
            </div>
        </h5>
    </section>

    <section style='justify-content:center; margin: 2em;'>
        <a href="/inicioGA/gerentesAgencia"><button type="button" class="btn btn-primary btn-lg">Regresar</button></a>
    </section>


    <section style="justify-content:center; width:100%; margin-bottom: 100px;">
        <section style="justify-content:center; width:80%; margin:auto;">
            <form action="/inicioGA/gerentesAgencia/editarGerenteAgencia" method="POST">
            {{#each gerenteAgencia}}
                <div style="display: -webkit-box">
                    <h3 style="margin:10px;">Modificar Gerente de Agencia</h3>
                    <i data-feather="user" style="margin: 1em;"></i>
                </div>
                <hr>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">ID Gerente Agencia:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="id_usuario" value="{{id_usuario}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Nombre:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="nombre" value="{{nombre}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Teléfono:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="telefono" value="{{telefono}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Email:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="email" value="{{email}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Domicilio:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="domicilio" value="{{domicilio}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Salario:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="salario" value="{{salario}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">ID Gerente Global:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="id_gerente_global" value="{{id_gerente_global}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">ID Sucursal:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="id_sucursal" value="{{id_sucursal}}" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Guardar</button>
            {{/each}}
            </form>    
        </section>
    </section>
</body>
{{> footer}}
