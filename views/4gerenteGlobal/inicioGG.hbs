{{> header }}

<body style="width: 100vw; height:100vh">
    <section>
        <h5 class="card-header" style="margin: 3px; margin-bottom: 20px; font-size: 31px;">Inicio de Gerente Global
            <div class="btn-group" style="float: right;">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menú
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <button class="dropdown-item" type="button">Cerrar Sesión</button>
                </div>
            </div>
        </h5>
    </section>

    <section style='justify-content:center; width:100%; margin: 1em;'>
        <a href="/inicioGG/generarStock"><button type="button" class="btn btn-info btn-lg">Generar Stock</button></a>
        <a href="/sucursales"><button type="button" class="btn btn-info btn-lg">Sucursales</button></a>
        <a href="/inicioGG/reportes"><button type="button" class="btn btn-info btn-lg">Reportes</button></a>
        <a href="/inicioGA/gerentesAgencia"><button type="button" class="btn btn-info btn-lg">Gerentes de Agencia</button></a>
    </section>

    <section style="justify-content:center; width:100%;">
        <section style="justify-content:center; width:80%; margin:auto;">
            {{#each gerenteGlobal}}
            <form>
                <div>
                    <h3 style="margin:10px;">Perfil</h3>
                    <i data-feather="user" style="margin:10px;"></i>
                </div>
                <hr>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">ID Gerente Global:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{id_gerente_global}}" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Nombre:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{nombre}}" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Teléfono:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{telefono}}" disabled>
                    </div>
                </div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Email:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{email}}" disabled>
                    </div>
                </div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Domicilio:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{domicilio}}" disabled>
                    </div>
                </div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Salario:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{salario}}" disabled>
                    </div>
                </div>
            </form>    
            {{/each}}
        </section>
    </section>
</body>
{{> footer}}