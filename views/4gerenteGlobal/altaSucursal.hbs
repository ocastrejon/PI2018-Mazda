{{> header }}

<body style="width: 98.9vw; height:100vh">
    <section class="menuBar">
        <h5 class="card-header" style="    margin: 3px; margin-bottom: 20px; font-size: 31px; color:white;">
            <img src="../../assets/images/logoBueno.jpg" style="width: 45px; margin-right: 10px;">Alta de Sucursal
            <div class="btn-group" style="float: right;">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menú
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a href="/inicioGG"><button class="dropdown-item" type="button">Perfil</button></a>
                    <button class="dropdown-item" type="button">Cerrar Sesión</button>
                </div>
            </div>
        </h5>
    </section>

    <section style='justify-content:center; margin: 2em;'>
        <a href="/sucursales"><button type="button" class="btn btn-primary btn-lg">Regresar</button></a>
    </section>

        <section style="justify-content: center; width:100%;">
        <section style="justify-content: center; width:70%; margin: auto">
            <form action="/sucursales/altaSucursal" method="POST"> 
                <div style="display: -webkit-box">
                    <h3 style="margin:10px;">Alta de Sucursal</h3>
                    <i data-feather="home" style="margin: 1em;"></i>
                </div>
                <hr>
                    <input hidden value="0" class="form-control" name="id_sucursal" placeholder="ID Sucursal">
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Dirección:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="direccion" placeholder="Dirección">
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Municipio:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="municipio" placeholder="Municipio">
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Estado:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="estado" placeholder="Estado">
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Código Postal:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="codigo_postal" placeholder="Código Postal">
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Región:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="region" placeholder="Región">
                    </div>
                </div>
                <button type="submit" class="btn btn-success btn-lg">Agregar</button>
            </form>    
        </section>
    </section>
</body>
{{> footer}}