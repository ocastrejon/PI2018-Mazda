{{> header }}

<body style="width: 98.9vw; height:100vh">
    <section class="menuBar">
        <h5 class="card-header" style="    margin: 3px; margin-bottom: 20px; font-size: 31px; color:white;">
            <img src="../../assets/images/logoBueno.jpg" style="width: 45px; margin-right: 10px;">Reportes de Compras
            <div class="btn-group" style="float: right;">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menú
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a href="/inicioGG" class="dropdown-item">Perfil</a>
                    <a href="/logout" class="dropdown-item">Cerrar Sesión</a>
                </div>
            </div>
        </h5>
    </section>

    <section style='justify-content:center; margin: 2em;'>
        <a href="/inicioGG"><button type="button" class="btn btn-primary btn-lg">Regresar</button></a>
    </section>

    <section style="margin-bottom: 100px;">
        <table class="table" id="tablaClientes">
            <thead class="thead-light">
                <tr>
                    <th scope="col">ID Compra</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Id Carro</th>
                    <th scope="col">Id Vendedor</th>
                    <th scope="col">Id Cliente</th>
                </tr>
            </thead>
            <tbody>
                {{#each compras}}
                <tr>
                    {{!--
                    <th scope="row"></th> --}}
                    <td>{{id_compra}}</td>
                    <td>{{cantidad}}</td>
                    <td>{{fecha}}</td>
                    <td>{{id_carro}}</td>
                    <td>{{id_vendedor}}</td>
                    <td>{{id_cliente}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>

</body>
{{> footer}}