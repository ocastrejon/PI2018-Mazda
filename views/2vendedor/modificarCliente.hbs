{{> header }}

<body style="width: 98.9vw; height:100vh">
    
    <section class="menuBar">
        <h5 class="card-header" style="    margin: 3px; margin-bottom: 20px; font-size: 31px; color:white;">
            <img src="../../assets/images/logoBueno.jpg" style="width: 45px; margin-right: 10px;">Modificar Cliente
            <div class="btn-group" style="float: right;">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menú
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a href="/inicioV" class="dropdown-item">Perfil</a>
                    <a href="/logout" class="dropdown-item">Cerrar Sesión</a>
                </div>
            </div>
        </h5>
    </section>

    <section style='justify-content:center; margin: 2em;'>
        <a href="/clientes"><button type="button" class="btn btn-primary btn-lg">Regresar</button></a>
    </section>


    <section style="justify-content: center; width:100%; margin-bottom: 100px;">
        <section style="justify-content: center; width:70%; margin: auto">
            <form action="/clientes/editarCliente" method="POST">
            {{#each cliente}}
                <div style="display: -webkit-box">
                    <h3 style="margin:10px;">Modificar Cliente</h3>
                    <i data-feather="user" style="margin: 1em;"></i>
                </div>
                <hr>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">ID Cliente:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="id_cliente" value="{{id_cliente}}" >
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Nombre:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="nombre" value="{{nombre}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Teléfono:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="telefono" value="{{telefono}}" required onkeypress="return numero(event)">
                    </div>
                </div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Email:</label>
                    <div class="col-sm-4">
                    <input type="email" class="form-control" name="email" value="{{email}}" required>
                    </div>
                </div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Domicilio:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="domicilio" value="{{domicilio}}" required>
                    </div>
                </div></div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">ID Vendedor:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="id_vendedor" value="{{id_vendedor}}" required>
                    </div>
                </div>
                <input hidden name="movimientos" value="">
                <button type="submit" class="btn btn-warning btn-lg">Guardar</button>
            {{/each}}
            </form>    
        </section>
    </section>

    <script>
        //onkeypress="return numero(event)"
        function numero(e){
            tecla = (document.all) ? e.keyCode : e.which;

            //Tecla de retroceso para borrar, siempre la permite
            if (tecla==8){
                return true;
            }
                
            // Patron de entrada, en este caso solo acepta numeros
            patron =/[0-9]/;
            tecla_final = String.fromCharCode(tecla);
            return patron.test(tecla_final);
        }
    </script>

</body>
{{> footer}}