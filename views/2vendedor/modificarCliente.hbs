{{> header }}

<body style="width: 100vw; height:100vh">
    
    <section>
        <h5 class="card-header" style="    margin: 3px; margin-bottom: 20px; font-size: 31px;">Modificar Cliente
            <div class="btn-group" style="float: right;">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menú
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a href="/inicioV"><button class="dropdown-item" type="button">Perfil</button></a>
                    <button class="dropdown-item" type="button">Cerrar Sesión</button>
                </div>
            </div>
        </h5>
    </section>

    <section style='justify-content:center; width:100%; margin: 1em;'>
        <a href="/clientes"><button type="button" class="btn btn-primary btn-lg">Regresar</button></a>
    </section>


    <section style="justify-content: center; width:100%;">
        <section style="justify-content: center; width:70%; margin: auto">
            <form action="/clientes/editarCliente" method="POST">
            {{#each cliente}}
                <div style="display: -webkit-box">
                    <h3 style="margin:10px;">Modificar Cliente</h3>
                    <i data-feather="user" style="margin: 1em;"></i>
                </div>
                <hr>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">ID Cliente:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="id_cliente" value="{{id_cliente}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Nombre:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="nombre" value="{{nombre}}" >
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Teléfono:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="telefono" value="{{telefono}}" >
                    </div>
                </div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Email:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="email" value="{{email}}" >
                    </div>
                </div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Domicilio:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="domicilio" value="{{domicilio}}" >
                    </div>
                </div></div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">ID Vendedor:</label>
                    <div class="col-sm-4">
                    <input class="form-control" name="id_vendedor" value="{{id_vendedor}}">
                    </div>
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Guardar</button>
            {{/each}}
            </form>    
        </section>
    </section>

</body>
{{> footer}}