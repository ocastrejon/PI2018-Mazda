{{> header }}

<body style="width: 98.9vw; height:100vh">
    <section class="menuBar">
        <h5 class="card-header" style="    margin: 3px; margin-bottom: 20px; font-size: 31px; color:white;">
            <img src="../../assets/images/logoBueno.jpg" style="width: 45px; margin-right: 10px;">Alta de Vendedor
            <div class="btn-group" style="float: right;">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menú
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a href="/inicioGA" class="dropdown-item">Perfil</a>
                    <a href="/logout" class="dropdown-item">Cerrar Sesión</a>
                </div>
            </div>
        </h5>
    </section>

    <section style='justify-content:center; margin: 2em;'>
        <a href="/inicioV/vendedores"><button type="button" class="btn btn-primary btn-lg">Regresar</button></a>
    </section>

    <section style="justify-content: center; width:100%; margin-bottom: 100px;">
        <section style="justify-content: center; width:70%; margin: auto">
            <form action="/inicioV/vendedores/altaVendedor" method="POST"> 
                <div style="display: -webkit-box">
                    <h3 style="margin:10px;">Alta de Vendedor</h3>
                    <i data-feather="user" style="margin: 1em;"></i>
                </div>
                <hr>
                <input hidden type="text" value="0" name="id_usuario">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Nombre completo:</label>
                    <div class="col-sm-4">
                        <input class="form-control" name="nombre" placeholder="Nombre completo" type="text" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Teléfono:</label>
                    <div class="col-sm-4">
                        <input class="form-control" name="telefono" placeholder="Teléfono" type="text" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Domicilio:</label>
                    <div class="col-sm-4">
                        <input class="form-control" name="domicilio" placeholder="Domicilio" type="text" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Salario:</label>
                    <div class="col-sm-4">
                        <input class="form-control" name="salario" placeholder="Salario" type="text" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">ID Gerente Agencia:</label>
                    <div class="col-sm-4">
                        <select class="form-control" name="id_gerente_agencia" style="padding: 0px;" required>
                            <option selected="true" disabled="disabled">Seleccione el Gerente de Agencia</option>
                            {{#each idGA}}
                                <option>{{id_usuario}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Email:</label>
                    <div class="col-sm-4">
                        <input class="form-control" name="email" placeholder="Email" type="email" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Constraseña:</label>
                    <div class="col-sm-4">
                        <input class="form-control" name="password" placeholder="Constraseña" type="password" required>
                    </div>
                </div>
                <input hidden type="text" name="tipo" value="Vendedor">
                <button type="submit" class="btn btn-success btn-lg">Agregar</button>
            </form>    
        </section>
    </section>
</body>
{{> footer}}
