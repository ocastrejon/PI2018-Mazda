{{> header }}

<body style="width: 98.9vw; height:100vh">
    <section class="menuBar">
        <h5 class="card-header" style="    margin: 3px; margin-bottom: 20px; font-size: 31px; color:white;">
            <img src="../../assets/images/logoBueno.jpg" style="width: 45px; margin-right: 10px;">Inicio de Gerente de Agencia
            <div class="btn-group" style="float: right;">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menú
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a href="/logout" class="dropdown-item">Cerrar Sesión</a>
                </div>
            </div>
        </h5>
    </section>

    <section style='justify-content:center; margin: 2em;'>
        <a href="/inicioGA/recibirStock"><button type="button" class="btn btn-info btn-lg">Recibir Stock</button></a>
        <a href="/inicioGA/solicitudesAutos"><button type="button" class="btn btn-info btn-lg">Solicitudes de Autos</button></a>
        <a href="/inicioGA/reportes"><button type="button" class="btn btn-info btn-lg">Reportes</button></a>
        <a href="/inicioV/vendedores"><button type="button" class="btn btn-info btn-lg">Vendedores</button></a>
    </section>

    <section style="justify-content:center; width:100%; margin-bottom: 100px;">
        <section style="justify-content:center; width:80%; margin:auto;">
            {{#each gerenteAgencia}}
            <form>
                <div style="display: -webkit-box">
                    <h3 style="margin:10px;">Perfil</h3>
                    <i data-feather="user" style="margin: 1em;"></i>
                </div>
                <hr>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">ID Gerente Agencia:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{id_usuario}}" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Nombre:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{nombre}}" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Teléfono:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{telefono}}" disabled>
                    </div>
                </div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Email:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{email}}" disabled>
                    </div>
                </div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Domicilio:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{domicilio}}" disabled>
                    </div>
                </div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">Salario:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{salario}}" disabled>
                    </div>
                </div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">ID Gerente Global:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{id_gerente_global}}" disabled>
                    </div>
                </div><div class="form-group row">
                    <label  class="col-sm-2 col-form-label">ID Sucursal:</label>
                    <div class="col-sm-4">
                    <input class="form-control" value="{{id_sucursal}}" disabled>
                    </div>
                </div>
            </form>    
            {{/each}}
        </section>
    </section>
</body>
{{> footer}}